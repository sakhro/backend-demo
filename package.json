{
  "name": "backend-demo",
  "version": "1.0.0",
  "main": "build/index.js",
  "author": "Sava-Danylo Sakhro <sd.sakhro@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf build",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly src",
    "build": "yarn clean && NEXUS_SHOULD_GENERATE_ARTIFACTS=true yarn generate && tsc",
    "start": "node build",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "generate:prisma": "yarn prisma generate",
    "generate:nexus": "ts-node --transpile-only src/config/schema",
    "introspect": "yarn prisma introspect",
    "postinstall": "yarn generate",
    "seed": "ts-node prisma/seed",
    "seed:firebase": "ts-node firebase/firestore",
    "migrate:save": "yarn prisma migrate save --experimental",
    "migrate:up": "yarn prisma migrate up --experimental",
    "migrate:develop": "yarn migrate:save && yarn migrate:up",
    "migrate:staging": "yarn migrate:up",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'prisma/**/*.ts'",
    "lint:fix": "tslint -c tslint.json 'src/**/*.ts' 'prisma/**/*.ts' --fix --format verbose"
  },
  "dependencies": {
    "@nexus/schema": "^0.13.1",
    "@prisma/client": "^2.0.0-beta.5",
    "@sendgrid/mail": "^7.1.1",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.8.27",
    "dotenv": "^8.2.0",
    "glob": "^7.1.6",
    "graphql-shield": "^7.3.0",
    "graphql-subscriptions": "^1.1.0",
    "graphql-tools": "^5.0.0",
    "graphql-yoga": "1.18.3",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "nexus-prisma": "^0.13.0",
    "ramda": "^0.27.0",
    "shortid": "^2.2.15"
  },
  "devDependencies": {
    "@prisma/cli": "^2.0.0-beta.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/glob": "^7.1.1",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.0.1",
    "@types/ramda": "^0.27.5",
    "@types/request": "^2.48.5",
    "@types/shortid": "^0.0.29",
    "@types/ws": "^7.2.4",
    "firebase-admin": "^8.12.1",
    "ts-node": "8.10.1",
    "ts-node-dev": "1.0.0-pre.44",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.16.0",
    "typescript": "3.8.3"
  }
}